class kids:
    def __init__(self, name, present, dress, phone, safety):
        self.name = name
        self.present = present
        self.dress = dress
        self.phone = phone
        self.safety = safety

    def assign_present(self, present):
        self.present = present

    def assign_dress(self, dress):
        self.dress = dress
    
    def assign_phone(self, phone):
        self.phone = phone

    def assign_safety(self, safety):
        self.safety = safety

    def student_properties(self):
        print("Student Data:")
        print("Name:", self.name)
        print("Days present in school:", self.present)
        print("Days not in dress code:", self.dress)
        print("Improper phone usage:", self.phone)
        print("Days being unsafe:", self.safety)
    

