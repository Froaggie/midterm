def mainmenu():
    print("Hello there! What would you like to do today? \n 1. View a student \n 2. Edit a students data")
    if(int(input()) == 1):
        print("What is the name of the student you would like to view?")
        kidname = str(input())
        kidex = thekids.index(kidname)
        display1 = engineering.pop(kidex)
        display1.student_properties()
